<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <!--        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">-->
        <!--            @mipmap/ic_launcher-->
        <!--        </item>-->
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">0</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/colorPrimary
        </item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DatePickerDialog</item>
        <!-- Style to use for Snackbars in this theme. -->
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <!-- Style to use for action button within a Snackbar in this theme. -->
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme</item>
        <!-- Style to use for message text within a Snackbar in this theme. -->
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
        <!--Style to use for the bottom dialog sheet, in this app case it will be holding filters-->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_view</item>
    </style>

    <style name="NavigationStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_height">@dimen/bottom_navigation_height</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <!-- <item name="backgroundTint">#00cc77</item>-->
        <!-- <item name="android:background">@drawable/snackbar_background</item>-->

        <item name="cornerRadius">0dp</item>
        <item name="android:layout_marginBottom">300dp</item>
        <item name="android:paddingStart">@dimen/layout_half_padding</item>
        <item name="android:paddingEnd">@dimen/layout_half_padding</item>
        <item name="actionTextColorAlpha">1.0</item>

    </style>

    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">1.0</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
    </style>

    <style name="AppTheme.DatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive
        </item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative
        </item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppTheme.Alert.Button.Neutral</item>
    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppBaseTextViewStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTextViewStyle" parent="AppBaseTextViewStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTitleTextViewStyle" parent="AppTextViewStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppSubTitleTextViewStyle" parent="AppTextViewStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="TextViewStyleBold">
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingBottom">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextViewStyleExtraBold">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
    </style>

    <style name="TextViewStyleSemiBold">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextViewStyleRegular">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextViewStyleMedium">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/layout_half_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:layout_marginTop">@dimen/layout_half_margin</item>
        <item name="android:textColor">@color/error_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>


    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textDirection">locale</item>
    </style>

    <style name="Widget.PictureInPicture.MovieView" parent="android:Widget">
        <item name="android:adjustViewBounds">false</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
    </style>











    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/white</item>
        <item name="android:textDirection">locale</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>


    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:maxLines">3</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/color_black_40</item>
        <item name="android:textSize">@dimen/txt_size_10</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_black_40</item>
        <item name="rippleColor">@color/color_black_20</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_black_40</item>
        <item name="rippleColor">@color/color_black_20</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/colorPrimary
        </item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">@dimen/layout_padding</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>



    <style name="ButtonStyleMedium" parent="ButtonStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ShapeableImageStyle" parent="">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>
</resources>
